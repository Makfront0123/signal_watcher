generator client {
  provider = "prisma-client-js"
  // output omitido para usar la ruta por defecto
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Watchlist {
  id        Int      @id @default(autoincrement())
  name      String
  terms     String[]
  createdAt DateTime @default(now())
  events Event[]
}

model Event {
  id          Int      @id @default(autoincrement())
  description String
  severity    String
  suggestion  String
  createdAt   DateTime @default(now())

  
  watchlistId Int
  watchlist   Watchlist @relation(fields: [watchlistId], references: [id])
}
